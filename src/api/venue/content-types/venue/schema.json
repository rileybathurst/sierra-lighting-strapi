{
  "kind": "collectionType",
  "collectionName": "venues",
  "info": {
    "singularName": "venue",
    "pluralName": "venues",
    "displayName": "Venue",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "address": {
      "type": "richtext"
    },
    "description": {
      "type": "text"
    },
    "phone": {
      "type": "integer"
    },
    "website": {
      "type": "string"
    },
    "venueImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9_-]+$"
    },
    "area": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::area.area",
      "inversedBy": "venues"
    },
    "excerpt": {
      "type": "string",
      "minLength": 50,
      "maxLength": 160
    },
    "projects": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::project.project",
      "mappedBy": "venue"
    },
    "testimonials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::testimonial.testimonial",
      "mappedBy": "venue"
    },
    "uses": {
      "type": "enumeration",
      "enum": [
        "wedding",
        "non-wedding",
        "corporate"
      ]
    },
    "services": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::service.service",
      "mappedBy": "venues"
    },
    "streetAddress": {
      "type": "string"
    },
    "addressLocality": {
      "type": "string"
    },
    "addressRegion": {
      "type": "string"
    },
    "postalCode": {
      "type": "string"
    }
  }
}
