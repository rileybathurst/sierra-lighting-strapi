{
  "kind": "collectionType",
  "collectionName": "vendors",
  "info": {
    "singularName": "vendor",
    "pluralName": "vendors",
    "displayName": "Vendor",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "service": {
      "type": "enumeration",
      "enum": [
        "photography",
        "planning",
        "production",
        "floral"
      ]
    },
    "description": {
      "type": "text"
    },
    "website": {
      "type": "string"
    },
    "facebook": {
      "type": "string"
    },
    "instagram": {
      "type": "string"
    },
    "pinterest": {
      "type": "string"
    },
    "slug": {
      "type": "string",
      "unique": true,
      "regex": "^[a-z0-9]*$",
      "required": true
    },
    "profile": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "excerpt": {
      "type": "string",
      "required": true
    },
    "testimonials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::testimonial.testimonial",
      "mappedBy": "vendor"
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "mappedBy": "vendors"
    }
  }
}
